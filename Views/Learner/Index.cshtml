@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model IEnumerable<Learner>
<div class="ms-2 mx-2">
    <h1>Learner List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên</th>
                <th>Họ</th>
                <th>Ngành</th>
                <th>Ngày nhập học</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.LearnerId</td>
                        <td>@s.FirstMidName</td>
                        <td>@s.LastName</td>
                        <td>@s.LearnerId</td>
                        <td>@s.Major.MajorName</td>
                        <td>@s.EnrollmentDate</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@s.LearnerId">Edit</a>|
                            <a asp-action="Delete" asp-route-id="@s.LearnerId">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>No learners available.</p>
            }
        </tbody>
    </table>
    <a action="Create" class="btn btn-primary">Create New Student</a>
</div>